<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    
    android:layout_height="match_parent" >

    <TextView
        
        android:id="@+id/tv_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="姓名"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:textCursorDrawable="@drawable/color_cursor"
        android:layout_toRightOf="@id/tv_username_label"
        android:maxLength="11"
        android:ems="10" />

    <TextView
        android:id="@+id/tv_pass_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_username_label"
        android:layout_marginTop="22dp"
        android:text="账号"
        
        android:textColor="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/et_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username"
          android:textCursorDrawable="@drawable/color_cursor"
          android:maxLength="11"
        android:layout_toRightOf="@id/tv_pass_label"
        android:ems="10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/et_account"
        android:layout_below="@id/et_account"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_red_selector"
            android:gravity="center"
          
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="取消" />

        <Button
            android:id="@+id/btn_confrim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
             android:gravity="center"
             android:textColor="@color/white"
            android:textSize="20dp"
             android:background="@drawable/btn_grenn_selector"
            android:layout_weight="1"
            android:text="确定" />
    </LinearLayout>

</RelativeLayout>