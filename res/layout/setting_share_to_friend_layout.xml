<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root_share_friend_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_toRightOf="@id/rl_root_home"
    android:visibility="invisible"
     >

    <ImageView
        android:id="@+id/iv_android_app_download"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_share_friend" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_android_app_download"
        android:layout_alignRight="@id/iv_android_app_download"
        android:layout_below="@id/iv_android_app_download"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="扫描二维码,下载手机app"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_iphone_app_download"
        android:layout_width="300dp"
        android:layout_height="300dp"
         android:visibility="invisible"
        android:layout_alignTop="@id/iv_android_app_download"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/iv_android_app_download"
        android:background="@drawable/ic_share_friend" />
  

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:visibility="invisible"
        android:layout_alignLeft="@id/iv_iphone_app_download"
        android:layout_alignRight="@id/iv_iphone_app_download"
        android:layout_below="@id/iv_iphone_app_download"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="iphone"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>